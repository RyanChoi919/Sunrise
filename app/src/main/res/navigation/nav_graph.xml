<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.nodes.sunrise.ui.home.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_EntryWriteFragment"
            app:destination="@id/EntryWriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/EntryWriteFragment"
        android:name="com.nodes.sunrise.ui.entry.write.EntryWriteFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_entry_write">

        <action
            android:id="@+id/action_EntryWriteFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_challenge_select"
        android:name="com.nodes.sunrise.ui.challenge.select.ChallengeSelectFragment"
        android:label="fragment_challenge_select"
        tools:layout="@layout/fragment_challenge_select" />
    <fragment
        android:id="@+id/nav_entry_read"
        android:name="com.nodes.sunrise.ui.entry.read.EntryReadFragment"
        tools:layout="@layout/fragment_entry_read" />
</navigation>