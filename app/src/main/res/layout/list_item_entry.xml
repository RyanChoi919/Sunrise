<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/list_item_entry_LL_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/list_item_entry_TV_date"
            style="@style/TextAppearance.Sunrise.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="25" />

        <TextView
            android:id="@+id/list_item_entry_TV_day_of_week"
            style="@style/TextAppearance.Sunrise.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOutline"
            tools:text="ì›”" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_entry_TV_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/nanum_myeongjo_bold"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/list_item_entry_LL_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/sample_title" />

    <TextView
        android:id="@+id/list_item_entry_TV_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/list_item_entry_TV_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_entry_TV_title"
        tools:text="@string/sample_content" />

    <TextView
        android:id="@+id/list_item_entry_TV_challenge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?attr/colorOutline"
        app:layout_constraintLeft_toLeftOf="@id/list_item_entry_TV_content"
        app:layout_constraintTop_toBottomOf="@id/list_item_entry_TV_content"
        tools:text="@string/sample_challenge_name_with_title" />

    <ImageView
        android:id="@+id/list_item_entry_IV_challenge_result"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/CD_challenge_result"
        android:src="@drawable/ic_round_check_circle_24"
        app:layout_constraintBottom_toBottomOf="@id/list_item_entry_TV_challenge"
        app:layout_constraintLeft_toRightOf="@id/list_item_entry_TV_challenge"
        app:layout_constraintTop_toTopOf="@id/list_item_entry_TV_challenge" />

</androidx.constraintlayout.widget.ConstraintLayout>