<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant"
    android:paddingHorizontal="@dimen/screen_horizontal_margin"
    tools:context=".ui.challenge.select.ChallengeSelectFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/CD_close"
        android:padding="16dp"
        android:src="@drawable/ic_round_close_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOutline" />

    <TextView
        android:id="@+id/frag_challenge_select_TV_title"
        style="@style/TextAppearance.Sunrise.HeadlineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:gravity="center_horizontal"
        android:text="@string/frag_challenge_select_title"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@id/frag_challenge_select_TV_today_challenge_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_challenge_select_TV_title" />

    <TextView
        android:id="@+id/frag_challenge_select_TV_today_challenge_subtitle"
        style="@style/TextAppearance.Sunrise.LabelMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/today_challenge"
        app:layout_constraintBottom_toTopOf="@id/frag_challenge_select_TV_today_challenge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/frag_challenge_select_TV_today_challenge"
        style="@style/TextAppearance.Sunrise.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/sample_challenge_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/frag_challenge_select_IV_refresh_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/bg_round_button"
        android:contentDescription="@string/CD_refresh_today_challenge"
        android:padding="8dp"
        android:src="@drawable/ic_round_refresh_24"
        app:layout_constraintBottom_toTopOf="@id/frag_challenge_select_TV_write_own_challenge_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_challenge_select_TV_today_challenge"
        app:tint="?attr/colorSurfaceVariant" />

    <TextView
        android:id="@+id/frag_challenge_select_TV_write_own_challenge_button"
        style="@style/TextAppearance.Sunrise.LabelSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="@string/frag_challenge_select_write_own_challenge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_challenge_select_IV_refresh_button" />

    <LinearLayout
        android:id="@+id/frag_challenge_Select_LL_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/frag_challenge_select_BTN_accept_challenge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_challenge_select_TV_write_own_challenge_button">

        <TextView
            android:id="@+id/frag_challenge_select_TV_note_1"
            style="@style/TextAppearance.Sunrise.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_challenge_select_note_1" />

        <TextView
            android:id="@+id/frag_challenge_select_TV_note_2"
            style="@style/TextAppearance.Sunrise.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/frag_challenge_select_note_2" />

        <TextView
            android:id="@+id/frag_challenge_select_TV_note_3"
            style="@style/TextAppearance.Sunrise.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_challenge_select_note_3" />

    </LinearLayout>

    <Button
        android:id="@+id/frag_challenge_select_BTN_accept_challenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="@string/frag_challenge_select_accept_challenge"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>