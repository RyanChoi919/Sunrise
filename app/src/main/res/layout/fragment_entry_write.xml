<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.entry.write.EntryWriteFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.nodes.sunrise.ui.entry.write.EntryWriteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/frag_entry_write_TB"
            layout="@layout/component_toolbar"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/frag_entry_write_RV_pictures"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_entry_write_TB"
            app:layout_constraintVertical_bias="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/frag_entry_write_ET_title"
                    style="@style/TextAppearance.Sunrise.TitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:hint="@string/frag_entry_write_title_hint"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:text="@={viewModel.currentEntry.title}" />

                <EditText
                    android:id="@+id/frag_entry_write_ET_content"
                    style="@style/TextAppearance.Sunrise.BodyMedium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/frag_entry_write_content_hint"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:text="@={viewModel.currentEntry.content}" />

            </LinearLayout>
        </ScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_entry_write_RV_pictures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/screen_horizontal_margin"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/frag_entry_write_LL_bottom_sheet"
            tools:itemCount="3"
            tools:listitem="@layout/list_item_photo_preview" />

        <!-- BottomSheet -->
        <LinearLayout
            android:id="@+id/frag_entry_write_LL_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
            android:orientation="horizontal"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/frag_entry_write_MCB_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_round_title_24"
                android:buttonTint="@color/entry_write_tab_icon"
                android:checked="@={viewModel.currentEntry.titleEnabled}" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/frag_entry_write_MCB_entry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_round_calendar_today_24"
                android:buttonTint="@color/entry_write_tab_icon"
                android:checked="true" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/frag_entry_write_MCB_entry_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_round_access_time_24"
                android:buttonTint="@color/entry_write_tab_icon"
                android:checked="true" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/frag_entry_write_MCB_entry_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_round_location_on_24"
                android:buttonTint="@color/entry_write_tab_icon" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/frag_entry_write_MCB_entry_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_round_photo_24"
                android:buttonTint="@color/entry_write_tab_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/frag_entry_write_TV_text_count"
            style="@style/TextAppearance.Sunrise.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/screen_horizontal_margin"
            android:text="@{@string/frag_entry_write_text_count(viewModel.textCount)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="100자" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>