<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entry.write.EntryWriteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/frag_entry_write_LL_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp">

            <TextView
                style="@style/TextAppearance.Sunrise.LabelSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/sample_entry_write_challenge_name_with_title"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_round_highlight_off_16" />

            <EditText
                android:id="@+id/frag_entry_write_ET_title"
                style="@style/TextAppearance.Sunrise.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:hint="@string/frag_entry_write_title_hint"
                android:importantForAutofill="no"
                android:inputType="text" />

            <EditText
                android:id="@+id/frag_entry_write_ET_content"
                style="@style/TextAppearance.Sunrise.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:hint="@string/frag_entry_write_content_hint"
                android:importantForAutofill="no"
                android:inputType="textMultiLine" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_horizontal_margin"
        android:background="@drawable/bg_write_entry_tools"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_round_title_24"
            android:buttonTint="@color/entry_write_tab_icon"
            android:checked="true" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_round_access_time_24"
            android:buttonTint="@color/entry_write_tab_icon" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_round_location_on_24"
            android:buttonTint="@color/entry_write_tab_icon" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_round_photo_24"
            android:buttonTint="@color/entry_write_tab_icon" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>