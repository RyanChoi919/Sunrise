<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:layout_marginHorizontal="@dimen/screen_horizontal_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/list_item_purchase_item_TV_name"
            style="@style/TextAppearance.Sunrise.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="광고 제거" />

        <TextView
            android:id="@+id/list_item_purchase_item_TV_description"
            style="@style/TextAppearance.Sunrise.BodyMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@id/list_item_purchase_item_TV_name"
            app:layout_constraintRight_toLeftOf="@id/list_item_purchase_item_BTN_purchase"
            app:layout_constraintTop_toBottomOf="@id/list_item_purchase_item_TV_name"
            android:layout_marginEnd="8dp"
            tools:text="\- 광고를 모두 제거합니다. 동해물과 백두산이 마르고 닳도록..." />

        <Button
            android:id="@+id/list_item_purchase_item_BTN_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="₩2,500" />

        <TextView
            android:id="@+id/list_item_purchase_item_TV_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/list_item_purchase_item_BTN_purchase"
            app:layout_constraintRight_toRightOf="@id/list_item_purchase_item_BTN_purchase"
            app:layout_constraintTop_toBottomOf="@id/list_item_purchase_item_BTN_purchase"
            tools:text="₩3,000" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>